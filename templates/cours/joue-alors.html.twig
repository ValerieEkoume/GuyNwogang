{% extends 'layouts/base.html.twig'%}

{% block title 'Joue Alors' %}

{% block body %}

    <div class="jumbotron">
        <div class="container  mt-5 mr-5">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.genre) }}
                </div>
                <div class="col">
                    {{ form_row(form.niveau) }}
                </div>
                <div class="col">
                    <button class="btn btn-primary">Recherche</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="container mt-4">
           <h1>Voir tous les cours</h1>
           <div class="row">
            {% for cours in courses %}
           <div class="col-md-3">
               {% include 'cours/_cours.html.twig' %}
           </div>
            {% endfor %}
       </div>
        <div class="pagination">
            {{ knp_pagination_render(courses) }}
        </div>
        <div class="text-center mb-5">
            <h5 class="btn btn-light"><a href="{{ path('app_joue-alors') }}" class=" text-muted text-decoration-none ">Les nouveaut√©s</a></h5>
        </div>
   </div>




{% endblock %}