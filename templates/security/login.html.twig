{% extends 'layouts/base.html.twig'%}

{% block title 'Se connecter' %}


{% block body %}

    <div class="jumbotron-2 text-center ">
        <div class="intro">
            {#            <img id="logoJa" src="{{ asset('build/images/logoJA.393c0749.png') }}" alt="">#}
            <h3 class="">CONNECTE-TOI ALORS !</h3>

        </div>
    </div>


    <br>

    <form  class="mt-3" method="post">

        <h1 class=" my-5 font-weight-normal text-center">Connectez-vous</h1>

        {% for message in app.flashes('success') %}
            <div class="flash-notice text-center h3">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="flash-notice text-center h3">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}
            <div class="alert alert-danger text-center h3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="container">
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>

            <br>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <br>
            <div class="checkbox mb-3">
            <label for="remember_me">
                <input type="checkbox"  name="_remember_me" checked/>
                Restez connecté
            </label>
            </div>
        <button class="btn btn-lg btn-dark" type="submit">
            Se connecter
        </button>
            <br>

            <p class="mt-4"><a href="#">Mot de passe oublié ?</a></p>

            <h6 class="text-center my-4">Pas encore membre ? <a href="{{ path('app_register') }}">Créé votre compte.</a></h6>



        </div>


    </form>



{% endblock %}

