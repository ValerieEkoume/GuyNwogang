{% extends 'layouts/base.html.twig'%}

{% block title 'Se connecter' %}


{% block body %}

    {% for message in app.flashes('success') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <br>

    <form  class="mt-5" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class=" mb-3 mt-4 font-weight-normal text-center">Connectez-vous</h1>
        <div class="container">
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>



            <br>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <br>
            <div class="checkbox mb-3">
            <label for="remember_me">
                <input type="checkbox"  name="_remember_me" checked/>
                Restez connecté
            </label>
            </div>
        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
            <br>

            <p class="mt-3"><a href="#">Mot de passe oublié ?</a></p>

            <h6 class="text-center mt-5">Pas encore membre ? <a href="{{ path('app_register') }}">Créé votre compte.</a></h6>



        </div>


    </form>



{% endblock %}

